<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imgResultado"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/obesidadegrau2"
        android:contentDescription="Imagem Obesidade Grau 2"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/txtDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#006341"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensagem_obesidade_grau_2"
        android:textSize="16sp"
        android:textColor="#4D4D4D"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnFechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00A859" />
</LinearLayout>
